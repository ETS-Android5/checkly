<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_home_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:textSize="28sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/main_menu_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_menu_blue_24dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Sheet"
                    android:layout_marginLeft="10dp"
                    android:textSize="24sp"
                    android:textColor="@color/colorCoolDark"
                    android:fontFamily="@font/roboto_regular"/>

                <Button
                    android:id="@+id/main_sheetView_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="View sheets"
                    android:paddingHorizontal="15dp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_light"
                    android:textAllCaps="false"
                    android:background="@drawable/flatline_gray"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginHorizontal="20dp"
                app:cardElevation="15dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/main_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/main_material"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/f_material_ic"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Score: "
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/robotoslab_light"/>

                                <TextView
                                    android:id="@+id/main_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/robotoslab_regular"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Items: "
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/robotoslab_light"/>

                                <TextView
                                    android:id="@+id/main_items"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/robotoslab_regular"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Misses: "
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/robotoslab_light"/>

                                <TextView
                                    android:id="@+id/main_miss"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/robotoslab_regular"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Percentage: "
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/robotoslab_light"/>

                                <TextView
                                    android:id="@+id/main_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/robotoslab_regular"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="20dp"
                        android:text="@string/ocr_main_intro"
                        android:textColor="@color/colorEmpWhite"
                        android:textSize="14sp" />

                    <Button
                        android:background="@drawable/flatline_blue"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/gvisionBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:paddingHorizontal="15dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_regular"
                        android:textAllCaps="false"
                        android:layout_marginVertical="15dp"
                        android:layout_marginRight="25dp"
                        android:text="Do check" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Key"
                    android:layout_marginLeft="10dp"
                    android:textSize="24sp"
                    android:textColor="@color/colorCoolDark"
                    android:fontFamily="@font/roboto_regular"/>

                <Button
                    android:id="@+id/keyEditBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="15dp"
                    android:text="View keys"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_light"
                    android:textAllCaps="false"
                    android:background="@drawable/flatline_cooldark"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/a_icon"
                            android:layout_margin="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:id="@+id/main_keyName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active key name"
                                android:textSize="16sp"
                                android:fontFamily="@font/robotoslab_regular"
                                android:textColor="@color/colorWhite"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Items: "
                                    android:fontFamily="@font/robotoslab_regular"
                                    android:textColor="@color/colorWhite"/>
                                <TextView
                                    android:id="@+id/main_key_items"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="0"
                                    android:fontFamily="@font/robotoslab_regular"
                                    android:textColor="@color/colorWhite"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                android:textSize="24sp"
                android:textColor="@color/colorCoolDark"
                android:fontFamily="@font/roboto_regular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="15dp"
                app:cardCornerRadius="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary">

                    <Button
                        android:id="@+id/main_aboutBtn"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="20dp"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/flatline_blue"
                        android:text="Learn more"
                        android:textAllCaps="false"
                        android:textColor="@color/colorCoolDark"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginHorizontal="30dp"
                        android:layout_gravity="center_vertical"
                        android:text="This app is not your typical app. Try me."
                        android:textColor="@color/colorEmpWhite"
                        android:textSize="14sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>