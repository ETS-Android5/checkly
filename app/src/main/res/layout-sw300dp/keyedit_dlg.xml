<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/keyEditDlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/robotoslab_bold"
        android:text="Edit Keys"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/keyEditDlg_listView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/keyEditDlg_aBtn"
            android:layout_width="63dp"
            android:layout_marginHorizontal="2dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="A"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/keyEditDlg_bBtn"
            android:layout_width="63dp"
            android:layout_marginHorizontal="2dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="B"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/keyEditDlg_cBtn"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginHorizontal="2dp"

            android:text="C"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/keyEditDlg_dBtn"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:background="@color/colorPrimary"
            android:text="D"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <Button
        android:id="@+id/keyEditDlg_saveBtn"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorCoolBlue"
        android:text="SAVE"
        android:textColor="@color/colorWhite" />


</LinearLayout>