<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCoolDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_code_black_24dp"/>

        <TextView
            android:id="@+id/keyEditDlg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorDefaultFont"
            android:gravity="center_horizontal"
            android:text="@string/dev_mode"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/devAccess_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:hint="Password"
            android:gravity="center_horizontal"
            android:textColorHint="@color/colorDefaultFont"
            android:textColor="@color/colorDefaultFont"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/devAccess_continueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="CONTINUE"
            android:textColor="@color/colorDefaultFont"
            android:background="@drawable/material_gray_round_rectangle"/>

    </LinearLayout>

</LinearLayout>